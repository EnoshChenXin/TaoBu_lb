<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dp_60">

        <LinearLayout
            android:id="@+id/lin_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon3"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50" />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/lin_head"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_vertical"
               android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:lines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_title"
                    android:text="title"
                    android:textSize="@dimen/sp_size_16"
                    android:textColor="@color/mon_dialog_mesg_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
                <TextView
                    android:lines="2"
                    android:ellipsize="end"
                    android:id="@+id/tv_addTime"
                    android:layout_marginTop="@dimen/dp_8"
                    style="@style/style_font_38_black"
                    android:text="dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/bg_lin"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:background="@color/green500"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_30">

        <TextView
            android:id="@+id/state_tv"
            android:gravity="center"
            android:textSize="@dimen/sp_size_12"
            android:textColor="@color/white"
            android:text="查看"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
