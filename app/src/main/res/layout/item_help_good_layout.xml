<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_gridview"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_4">

                <com.lianbei.taobu.views.CustomRoundAngleImageView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dp_126"
                    android:layout_height="@dimen/dp_126"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon3" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:textStyle="bold"
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:letterSpacing="0.03"
                android:lineSpacingMultiplier="1.1"
                android:lines="2"
                android:text="芬芳最美的芬芳最美的就是你芬芳最美的就是你芬芳最美的就是你就是你芬芳最美的就是你芬芳最美的就是你"
                android:textColor="#323232"
                android:textSize="@dimen/sp_size_14" />

            <ImageView
                android:id="@+id/juan"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_18"
                android:layout_below="@id/goods_name"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@mipmap/duihuan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/juan"
                android:layout_marginTop="@dimen/dp_4">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/td_logo"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"/>

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tangdou_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/red400">
                    <TextView
                        android:padding="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击免费拿"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_12" />
                    <!--<com.lianbei.taobu.views.MyButton-->
                    <!--android:onClick="fa"-->
                    <!--android:id="@+id/free_btn"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@drawable/bg_gridview2"-->
                    <!--android:text="点击免费拿"-->
                    <!--android:textColor="@color/white" />-->
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
