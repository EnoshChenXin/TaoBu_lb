<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center"
            android:text="确认收货地址" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mj_common_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小李子"
                    android:textColor="@color/news_title_text_color"
                    android:textSize="@dimen/sp_size_18" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18234523456"
                    android:textColor="@color/text_color333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡机的立法将法拉第就发了阿道夫打发大发发呆 阿达啊发打发发法法师发阿凡达s"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/choose_address"
           android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="选择其他收货地址"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/next"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/bg_list_gridview"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.lianbei.taobu.views.CustomRoundAngleImageView
                            android:background="@drawable/bg_list_gridview"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:scaleType="centerCrop"
                            android:id="@+id/iv_img"
                            android:layout_width="@dimen/dp_126"
                            android:layout_height="@dimen/dp_126" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:lineSpacingMultiplier="1.1"
                        android:letterSpacing="0.03"
                        android:id="@+id/goods_name"
                        android:textColor="#323232"
                        android:textSize="@dimen/sp_size_14"
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingBottom="@dimen/dp_3"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/sp_size_14"
                            android:textColor="@color/text_color333333"
                            android:text="已选择该商品, 助力0元拿"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@color/red">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_size_16" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>