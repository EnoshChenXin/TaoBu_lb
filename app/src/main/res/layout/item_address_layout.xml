<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_gridview"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:gravity="right"
            android:orientation="horizontal">


            <ImageView
                android:layout_gravity="bottom"
                android:src="@mipmap/close"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mj_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text=""
                android:textColor="@color/mj_black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_marginRight="@dimen/dp_30"
                android:id="@+id/district_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mj_black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/white2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout

            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">

            <ImageView
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:adjustViewBounds="true"
                android:id="@+id/radiobtn"
                android:textColor="@color/gray_deep2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:text="已选择"/>
            <TextView
                android:id="@+id/choose_tv"
                android:gravity="center_vertical"
                android:textColor="@color/gray_deep2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/radiobtn"
                android:text="已选择"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/edit_address"
                android:textColor="@color/navigation_text_B5B5B5"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:text="编辑"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
