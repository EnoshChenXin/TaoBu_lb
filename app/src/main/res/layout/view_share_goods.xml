<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cart="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/view_background"
    android:orientation="vertical"
    tools:context=".ShareInvitation.ShareStepsActivity">

    <LinearLayout
        android:id="@+id/goods_bg_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_image_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/goods_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/red"
                android:clickable="true"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tb_image_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_weight="4"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/baoyou"
                        android:paddingLeft="3dp"
                        android:paddingRight="@dimen/dp_3"
                        android:text="包邮"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_size_13" />

                    <TextView
                        android:id="@+id/goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/main_blue"
                        android:textSize="@dimen/sp_size_16" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/groupPrice_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="原价："
                            android:textColor="@color/gary"
                            android:textSize="@dimen/sp_size_14" />

                        <com.lianbei.taobu.views.PriceView
                            android:id="@+id/oldprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            cart:decimalSize="@dimen/sp_size_14"
                            cart:intSize="@dimen/sp_size_14"
                            cart:moneySize="@dimen/sp_size_14"
                            cart:strike="true"
                            cart:textColor="@color/gary"
                            cart:value="0.00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_3"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingTop="@dimen/dp_1"
                            android:paddingBottom="@dimen/dp_1"
                           android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/baoyou"
                            android:paddingLeft="3dp"
                            android:paddingRight="@dimen/dp_3"
                            android:text="券"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_size_12" />

                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:id="@+id/Coupondiscount_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="券后价:"
                            android:textColor="@color/gary"
                            android:textSize="@dimen/sp_size_14" />

                        <com.lianbei.taobu.views.PriceView
                            android:paddingBottom="@dimen/dp_4"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:id="@+id/nowprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            cart:decimalSize="@dimen/sp_size_22"
                            cart:intSize="@dimen/sp_size_22"
                            cart:moneySize="@dimen/sp_size_16"
                            cart:strike="false"
                            cart:textColor="#ff0000"
                            cart:value="0.00" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ewm"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@mipmap/ewm_bg3"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

