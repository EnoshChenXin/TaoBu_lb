<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="-2px"
        android:right="-2px"
        android:top="1px">
        <shape>
            <stroke
                android:width="1px"
                android:color="@color/light_gray" />
        </shape>
    </item>
    <!--指定边框线条，需要显示线条的边设置为正值stroke 的width。-->
    <!--不显示的边设置为 负值 stroke 的width。-->
</layer-list>