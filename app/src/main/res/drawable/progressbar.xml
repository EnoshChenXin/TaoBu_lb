<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <!--形状-->
        <shape>
            <!-- 角球-->
            <corners android:radius="40dip" />
            <!--梯度-->
            <gradient
                android:angle="0"
                android:endColor="#CECECE"
                android:startColor="#C2C2C2" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="40dip" />
                <gradient
                    android:angle="0"
                    android:centerColor="#FD7A39"
                    android:centerY="0.75"
                    android:endColor="#FF622F"
                    android:startColor="#FD8D0D" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="40dip" />
                <gradient
                    android:angle="0"
                    android:endColor="#FD3B19"
                    android:startColor="#FF9E21" />
            </shape>
        </clip>
    </item>

</layer-list>