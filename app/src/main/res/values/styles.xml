    <!--倒计时start-->
    <style name="RushBuyCountDownTimerViewStyle" parent="SnapUpView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RushBuyCountDownTimerViewStyleRed" parent="RushBuyCountDownTimerViewStyle">
        <item name="android:textColor">@color/main_font</item>
    </style>


    <style name="SnapUpViewColon" parent="SnapUpView">
        <item name="android:textColor">#4F4242</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">:</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SnapUpView">
        <!--//改变控件大小-->
        <item name="android:textSize">20sp</item>
    </style>
    <!--倒计时end-->

    <!-- 确认按钮(小) -->
    <style name="gdfw_btn_small_chaxun_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_small_selector</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:text">确认</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15sp</item>
    </style>

    <!--EditText下划线颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/light_gray2</item>
        <item name="colorControlActivated">@color/text_grey</item>
    </style>

    <style name="EditAddressAddAvatar" parent="Theme.AppCompat.Dialog">
        <!--背景色,此处的背景色请一定要设置为透明度背景色-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--window Is Translucent 窗口是半透明的-->
        <item name="android:windowIsTranslucent">true</item>
        <!--window No Title窗口无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--弹出动画-->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:title">@null</item>
        <item name="android:dialogTitle">@null</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="PickerAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/picker_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/picker_bottom_out</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>
