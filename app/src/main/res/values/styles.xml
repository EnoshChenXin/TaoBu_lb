    <!-- 分享 -38px 白色 5f5f5f -->
    <style name="share_font_38_yellow_small">
        <item name="android:textSize">@dimen/font_size_46</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
    <!-- 分享 -38px 白色 5f5f5f -->
